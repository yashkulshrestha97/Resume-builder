<script>
    function register() {
        console.log('button clicked');
        var formData = {
            name: $("#name").val(),
            email: $("#email").val(),
            password: $("#password").val(),
        }
            $.ajax({
            type: "POST",
            url: "/api/user/register/post",
            data: formData,
            dataType: "json",
            success: function(data, textStatus) {
                window.location.href= '/api/user/login';
            },
            encode: true,
            })
    }
</script>