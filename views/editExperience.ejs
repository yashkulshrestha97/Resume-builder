<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div style="margin-left: 65px;" class="container-fluid">
          <a  class="navbar-brand" href="/api/user/index"><i class="fas fa-user-check fa-lg"></i> ResumeBuilder</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
        </div>
        <div style="margin-right: 65px;" class="ml-auto" class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/api/user/get-info">Dashboard</a>
            </li>
            </ul>
        </div>
    </nav>
    <div class="container">
        <div class="row">
            <div style="width: 30%; margin: 30px auto;">
                <h1 style="text-align: center;">Edit Experience</h1>
                <form method="POST">
                    <div class="form-group">
                        <label for="org_name">Organisation Name :</label>
                        <input class="form-control" type="text" id="org_name" value="<%= experience.org_name %>" name="org_name" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="joining_date">Joining Date:</label>
                        <input class="form-control" type="text" id="joining_date" value="<%= experience.joining_date %>" name="joining_date" required>
                    </div>
                    
                    <div class="form-group">
                        <label for='last_date'>Last Date:</label>
                        <input class="form-control" type="text" id="last_date" value="<%= experience.last_date %>" name="last_date" required>
                    </div>
                    <div class="form-group">
                        <label for='duration'>Duration:</label>
                        <input class="form-control" type="text" id="duration" value="<%= experience.duration %>" name="duration" required>
                    </div>
                    <button style="margin-top: 10px; width: 100%; height: 40px;" class="editexperienceButton" onclick="editExperience()" type="button">Update Experience</button>
                </form>
            </div>
        </div>
    </div>

