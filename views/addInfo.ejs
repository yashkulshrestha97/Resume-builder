<script>
    function addInfo() {
        console.log('button clicked');
        var formData = {
            houseNumber: $("#houseNumber").val(),
            street: $("#street").val(),
            city: $("#city").val(),
            state: $("#state").val(),
            country: $("#country").val(),
            mobileNumber: $("#mobileNumber").val(),
            age: $("#age").val(),
        }
            $.ajax({
            type: "POST",
            url: "/api/user/info",
            data: formData,
            dataType: "json",
            success: function(data, textStatus) {
                window.location.href= '/api/user/get-info';
            },
            encode: true,
            })
    }
</script>


