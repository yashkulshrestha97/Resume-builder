<script>
    function updateUser() {
        console.log('button clicked');
        var formData = {
            name: $("#name").val(),
            email: $("#email").val(),
            password: $("#password").val(),
        }
            $.ajax({
            type: "PUT",
            url: "/api/user/update/put",
            data: formData,
            dataType: "json",
            success: function(data, textStatus) {
                window.location.href= '/api/user/login';
            },
            encode: true,
            })
    }
</script>